<script>

    let navnpasient = document.getElementById('navnupdate').value = "<%- data %>"

    function updatejournal() {
        let navn = document.getElementById('navnupdate').value
        let dittnavn = document.getElementById('dittnavn').value
        let hendelse = document.getElementById('hendelse').value

        try {
            location.href = `http://ubsky.xyz/profile_update/${navn.replaceAll(' ', '_')}/desc/${hendelse.replaceAll(' ', '_')}/addedby/${dittnavn.replaceAll(' ', '_')}`
        } catch(e) {
            console.log(e)
            location.href = `http://ubsky.xyz/profile_update/error/desc/0/addedby/0`
        }
    }
</script>